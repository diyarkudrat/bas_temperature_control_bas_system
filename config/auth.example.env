# BAS Authentication System Environment Configuration
# Copy this file to .env and update the values as needed

# Authentication System Settings
BAS_AUTH_ENABLED=true
BAS_AUTH_MODE=user_password_mfa

# Session Configuration
BAS_SESSION_TIMEOUT=1800
BAS_MAX_CONCURRENT_SESSIONS=3

# Security Settings
BAS_MAX_LOGIN_ATTEMPTS=5
BAS_LOCKOUT_DURATION=900

# Twilio SMS Configuration (for MFA)
# Get these from your Twilio Console: https://console.twilio.com/
TWILIO_ACCOUNT_SID=ACxxxxxxxxxxxxxxxxxxxxxxxxxxxxx
TWILIO_AUTH_TOKEN=your_twilio_auth_token_here
TWILIO_FROM_NUMBER=+1234567890

# Optional: Override default database path
# BAS_DB_PATH=server/bas_telemetry.db

# Optional: Override default config file path
# BAS_AUTH_CONFIG_PATH=config/auth_config.json
