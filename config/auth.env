# Project-local Auth0 configuration (loaded by scripts/start_bas.sh)
# Replace AUTH0_DOMAIN with your actual Auth0 tenant domain.

AUTH_PROVIDER=auth0
AUTH0_DOMAIN=dev-27odarqasawzo8x8.us.auth0.com
AUTH0_AUDIENCE=https://api.mybasproject.com
BAS_PATH_SENS_RULES='[{"pattern":"^/$","level":"standard"}]'

# Optional: emulator/dev flags (leave as-is if not using emulators)
USE_EMULATORS=0

# Per-service runtime wiring for standalone auth
AUTH_SERVICE_URL=http://localhost:9090
AUTH_SERVICE_TOKEN_AUDIENCE=bas-auth
AUTH_SERVICE_TOKEN_ISSUER=https://dev-27odarqasawzo8x8.us.auth0.com/
AUTH_SERVICE_TOKEN_SUBJECT=api-backend
AUTH_SERVICE_TOKEN_SCOPE=
AUTH_SERVICE_TOKEN_TTL_S=30
AUTH_SERVICE_REMOTE_ADDR_HEADER=X-Forwarded-For

# Service JWT asymmetric key material (JWKS or PEMs) for API<->auth calls
SERVICE_JWT_PREFIX=SERVICE_JWT
SERVICE_JWT_KEYSET_JSON=
# SERVICE_JWT_PUBLIC_JWK=  # optional alternative to KEYSET_JSON
SERVICE_JWT_EXPECTED_AUDIENCE=bas-auth
SERVICE_JWT_EXPECTED_ISSUER=https://dev-27odarqasawzo8x8.us.auth0.com/
SERVICE_JWT_ALLOWED_SUBJECTS=api-backend
SERVICE_JWT_REQUIRED_SCOPES=auth.limits.update


